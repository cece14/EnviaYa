@using DTO
@model Obligatorio.Models.AltaEmpleadoViewModel

@{
    ViewData["Title"] = "Crear Empleado";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="text-center mb-4">
        <h2 class="fw-bold" style="color: #0F2E4C;">Alta de Empleado</h2>
        <p class="text-muted">Complete los siguientes campos para registrar un nuevo empleado en el sistema</p>
    </div>

    @if (ViewBag.MensajeError != null)
    {
        <div class="alert alert-danger">@ViewBag.MensajeError</div>
    }

    <form asp-action="Create" method="post" class="p-4 shadow rounded" style="background-color: #ffffff;">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="mb-3">
            <label asp-for="DTO.Nombre" class="form-label" style="color: #0F2E4C;"></label>
            <input asp-for="DTO.Nombre" class="form-control border-2" style="border-color: #27C281;" />
            <span asp-validation-for="DTO.Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DTO.Apellido" class="form-label" style="color: #0F2E4C;"></label>
            <input asp-for="DTO.Apellido" class="form-control border-2" style="border-color: #27C281;" />
            <span asp-validation-for="DTO.Apellido" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DTO.Email" class="form-label" style="color: #0F2E4C;"></label>
            <input asp-for="DTO.Email" class="form-control border-2" style="border-color: #27C281;" />
            <span asp-validation-for="DTO.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DTO.Password" class="form-label" style="color: #0F2E4C;"></label>
            <input asp-for="DTO.Password" type="password" class="form-control border-2" style="border-color: #27C281;" />
            <span asp-validation-for="DTO.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DTO.Telefono" class="form-label" style="color: #0F2E4C;"></label>
            <input asp-for="DTO.Telefono" class="form-control border-2" style="border-color: #27C281;" />
            <span asp-validation-for="DTO.Telefono" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="DTO.Rol" class="form-label" style="color: #0F2E4C;"></label>
            <select asp-for="DTO.Rol" class="form-select" asp-items="Html.GetEnumSelectList<RolDTO>()"></select>
            <span asp-validation-for="DTO.Rol" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn" style="background-color: #27C281; color: white; font-weight: bold;">
                Crear empleado
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
