@model Obligatorio.Models.AltaSeguimientoViewModel

@{
    ViewData["Title"] = "Nuevo Seguimiento";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="text-center mb-4">
        <h2 class="fw-bold" style="color: #0F2E4C;">Agregar Comentario</h2>
        <p class="text-muted">Al envío <strong>#@Model.DTO.EnvioId</strong></p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center fw-bold">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center fw-bold">@TempData["Error"]</div>
    }

    <div class="mb-3">
        <p><strong style="color: #0F2E4C;">Cliente:</strong> @Model.NombreCliente</p>
        <p><strong style="color: #0F2E4C;">Dirección:</strong> @Model.DireccionPostal</p>
    </div>

    <form asp-action="Crear" method="post" class="p-4 shadow rounded" style="background-color: #ffffff;">
        <input type="hidden" asp-for="DTO.EnvioId" />

        <div class="mb-3">
            <label asp-for="DTO.Comentario" class="form-label" style="color: #0F2E4C;">Comentario</label>
            <textarea asp-for="DTO.Comentario" class="form-control border-2" style="border-color: #27C281;" rows="4"></textarea>
            <span asp-validation-for="DTO.Comentario" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn" style="background-color: #27C281; color: white; font-weight: bold;">
                Guardar comentario
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
